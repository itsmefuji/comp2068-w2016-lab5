<% include ../partials/header.ejs %>
<% include ../partials/navbar.ejs %>
<main class="container">
    <h1>Users</h1>

    <a href="/users/add">Add a New Users</a>

    <ul class="list-group">
        <% for (var i = 0; i < users.length; i++) { %>
            <li class="list-group-item">
                <a href="/users/<%= users[i]._id %>" title="Edit Users">
                    <%= users[i].username %>
                </a>
                <!-- hide password
                <br />
                <%= users[i].password %> 
                -->
                <br />
                <%= users[i].created.toDateString() %>
            </li>
        <% } %>
    </ul>
</main>
<% include ../partials/footer.ejs %>